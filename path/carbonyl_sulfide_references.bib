@UNPUBLISHED{Maignan2020-ih,
  title     = "Carbonyl sulfide: Comparing a mechanistic representation of the
               vegetation uptake in a land surface model and the Leaf Relative
               Uptake approach",
  author    = "Maignan, Fabienne and Abadie, Camille and Remaud, Marine and
               Kooiijmans, Linda M J and Kohonen, Kukka-Maaria and Commane,
